<h1>Post Show</h1>
<hr />
<div data-behaviour="component" data-component-name="Post" data-props="<%= { post: {
    title: @post.title,
    body: @post.body,
    url: posts_path,
    id: @post.id
}}.to_json %>">
  <div class="post">
    <h3>{{ post.title }}</h3>
    <p>{{ post.body }}</p>
    <a href="{{ post.url}}">return to posts</a>
  </div>
</div>

<hr />
<div data-behaviour="component" data-component-name="Comments" data-props="<%= { comments: @comments.map{|comment|
   {
    body: comment.body,
    id: comment.id
  }
}, newComment: {body: ''}, post_id: @post.id}.to_json %>">
  <p>Add comment</p>
  <form v-on:submit.prevent="addComment">
    <input v-model="newComment.body" />
  </form>
  <div class="comments">
    <li v-for="comment in comments">
      <p>{{ comment.body }}</p>
    </li>
  </div>
</div>
